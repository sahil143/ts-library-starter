{
  "name": "ts-library-starter",
  "version": "1.0.0",
  "description": "A sensible starter for react typescript library",
  "repository": "https://github.com/sahil143/ts-library-starter",
  "author": "Sahil Budhwar",
  "license": "MIT",
  "private": false,
  "main": "dist/index.js",
  "module": "dist/index.es.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "test": "jest",
    "install:app": "cd ./app && yarn install --no-lockfile",
    "start": "cd ./app && yarn start",
    "build": "rm -rf dist && yarn run -T rollup -c",
    "lint": "eslint '**/*.{ts,tsx}'",
    "prettier": "prettier '**/*.{js,jsx,ts,tsx}' --check",
    "prepare": "husky install"
  },
  "peerDependencies": {
    "react": ">=17"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^22.0.0",
    "@rollup/plugin-node-resolve": "^13.3.0",
    "@rollup/plugin-typescript": "^8.3.3",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.3.0",
    "@testing-library/react-hooks": "^8.0.1",
    "@testing-library/user-event": "^14.4.3",
    "@types/jest": "^28.1.7",
    "@types/node": "^18.7.6",
    "@typescript-eslint/eslint-plugin": "^5.33.1",
    "@typescript-eslint/parser": "^5.33.1",
    "eslint": "^8.22.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-react": "^7.30.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "husky": ">=6",
    "jest": "^28.1.3",
    "jest-environment-jsdom": "^28.1.3",
    "lint-staged": ">=10",
    "postcss": "^8.4.16",
    "prettier": "^2.7.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rollup": "^2.75.6",
    "rollup-plugin-analyzer": "^4.0.0",
    "rollup-plugin-dts": "^4.2.2",
    "rollup-plugin-postcss": "^4.0.2",
    "ts-jest": "^28.0.8",
    "typescript": "^4.7.4"
  },
  "lint-staged": {
    "*.{ts,tsx}": "eslint --fix",
    "*.{ts,tsx,md}": "prettier --write"
  }
}
